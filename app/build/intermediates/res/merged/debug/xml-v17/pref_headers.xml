        android:summary="@string/pref_header_general_summary"
        android:title="@string/pref_header_general"
        android:icon="@drawable/settings_general" />

    <header
        android:summary="@string/pref_header_tutorial_summary"
        android:title="@string/pref_header_intro"
        android:icon="@drawable/settings_guide">
        <intent
            android:targetClass="com.synthform.colombo.activities.MainIntroActivity"
            android:targetPackage="com.synthform.colombo" />
    </header>

    <header
        android:title="@string/pref_header_about"
        android:icon="@drawable/settings_about">
        <intent
            android:targetClass="com.synthform.colombo.activities.AboutActivity"
            android:targetPackage="com.synthform.colombo" />
    </header>

</preference-headers>
